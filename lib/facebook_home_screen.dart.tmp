  Stream<QuerySnapshot> _performChurchSearch(String searchQuery) {
    final churchService = ChurchService();

    if (searchQuery.isEmpty) {
      return churchService.getAllChurches();
    } else {
      return churchService.searchChurches(searchQuery);
    }
  }

